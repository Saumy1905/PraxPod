source "https://rubygems.org"

gem "jekyll", "~> 3.9.0"
gem "jekyll-feed", "~> 0.12"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# Windows and JRuby do not include zoneinfo files
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Add webrick for Ruby 3.0+ compatibility
gem "webrick", "~> 1.7"
